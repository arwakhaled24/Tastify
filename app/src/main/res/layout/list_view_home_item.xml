    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/homeItemLayout"
        android:layout_width="192dp"
        android:layout_height="204dp"
        android:background="@drawable/icon_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/mealPhoto"
            android:layout_width="168dp"
            android:layout_height="126dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/image_background"
            android:clipToOutline="true"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/favIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/icon_background"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="@+id/mealPhoto"
            app:layout_constraintTop_toTopOf="@+id/mealPhoto"
            app:srcCompat="@drawable/heart_shape_icon" />

        <TextView
            android:id="@+id/mealTitleRV"
            android:layout_width="170dp"
            android:layout_height="36dp"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/sofia_pro_bold_az"
            android:gravity="center"
            android:maxLines="2"
            android:singleLine="false"
            android:text="mealTitle"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/mealPhoto"
            app:layout_constraintTop_toBottomOf="@+id/mealPhoto" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <!--  </androidx.cardview.widget.CardView>-->
</androidx.constraintlayout.widget.ConstraintLayout>